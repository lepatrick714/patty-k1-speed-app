{
  "name": "k1-speed-app-workspace",
  "version": "1.0.0",
  "description": "K1 Speed Race History Web Application",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "parser:build": "tsc",
    "parser:start": "npm run parser:build && node dist/index.js",
    "parser:dev": "tsx src/index.ts",
    "parser:auth": "tsx src/auth.ts",
    "parser:fetch": "tsx src/fetchEmails.ts",
    "parser:parse": "tsx src/parseResults.ts",
    "test": "tsx --test tests/*.test.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "googleapis": "^129.0.0",
    "imap": "^0.8.17",
    "mailparser": "^3.6.5",
    "open": "^10.0.0"
  },
  "devDependencies": {
    "@types/imap": "^0.8.40",
    "@types/mailparser": "^3.4.4",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
